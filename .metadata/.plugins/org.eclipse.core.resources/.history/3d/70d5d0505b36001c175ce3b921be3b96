package ch.ascendise.Validator;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class ValidatorTest {
	
	public static TestObject validTestObject = new TestObject();
	public static TestObject invalidTestObject = new TestObject();
	
	@BeforeAll
	void setup()
	{
		
	}

	@Test
	void validObject()
	{
		var testObject = new TestObject();
		testObject.setNotNull("");
		testObject.setMaxLength("1234567890123456789");
		testObject.setMinLength("1234");
		testObject.setRange("12345678");
		testObject.setNotBlank("a");
		testObject.setNotEmpty(" ");
		var validator = new Validator(testObject);
		boolean isValid = validator.IsValid();
		assertTrue(isValid, "Valid object got identified as invalid");
	}
	
	@Test
	void invalidObject()
	{
		var testObject = new TestObject();
		testObject.setNotNull(null);
		testObject.setMaxLength("123456789012345678901");
		testObject.setMinLength("1");
		testObject.setRange("12");
		testObject.setNotBlank(" ");
		testObject.setNotEmpty("");
		var validator = new Validator(testObject);
		boolean isValid = validator.IsValid();
		assertTrue(isValid, "Invalid object got identified as invalid");
	}

}
